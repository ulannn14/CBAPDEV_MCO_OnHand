<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Bookings | OnHand</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/bookings.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <script src="/js/dropdown-profile.js"></script>
  <link rel="icon" href="/images/icon.png" type="image/png">

  <style>
    /* Disable star interactions */
    .stars-disabled i {
      pointer-events: none;
      cursor: default;
      transition: none !important;
    }
  </style>

</head>

<body>
  {{> header}}

  <div class="bookings-container">
    <div class="booking-tabs">
      <a href="/bookings/ongoing" class="{{#if (eq currentTab 'ongoing')}}active{{/if}}">Ongoing</a>
      <a href="/bookings/to-rate" class="{{#if (eq currentTab 'to-rate')}}active{{/if}}">To Rate</a>
      <a href="/bookings/completed" class="{{#if (eq currentTab 'completed')}}active{{/if}}">Completed</a>
    </div>

    <div class="booking-list">

      {{!-- If no bookings --}}
      {{#if bookings.length}}
        {{!-- Loop bookings --}}
        {{#each bookings}}
        <div class="booking-card">
          <div class="booking-left">
            <div class="profile-row">
              <img src="{{image}}" alt="{{clientName}}" class="profile-pic">
              <div class="booking-info">
                <h3 class="client-name">{{clientName}}</h3>

                <div class="need-wrapper">
                  <p class="need-label">Need:</p>
                  <span class="service-type">{{serviceType}}</span>
                </div>
              </div>
            </div>

            <hr class="divider">
            <p class="location"><i class="fa-solid fa-location-dot"></i> {{location}}</p>
          </div>

          <div class="divider-vertical"></div>

          <div class="booking-right">
            <div class="agreed-price">
              <strong>Agreed Price:</strong>
              <p class="price">â‚±{{price}}</p>
            </div>

            {{!-- Static disabled stars for ongoing --}}
            <div class="stars stars-disabled">
              {{#times 5}}<i class="fa-regular fa-star"></i>{{/times}}
            </div>

            <p class="status">Ongoing booking</p>
          </div>
        </div>
        {{/each}}

      {{!-- IF EMPTY --}}
      {{else}}
        <p class="no-bookings-message">No ongoing bookings</p>
      {{/if}}

    </div>
  </div>
</body>
</html>
