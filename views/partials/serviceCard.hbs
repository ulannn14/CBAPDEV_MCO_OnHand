<div class="service-card">
  <div class="card-header">
    <img src="{{image}}" alt="{{workerName}}" class="profile-pic">
    <div class="worker-info">
      <h3 class="worker-name">{{workerName}}</h3>
      <span class="worker-job">{{jobTitle}}</span>
    </div>
  </div>

  <div class="card-body">
    <div class="card-row">
      <div class="info-group">
        <div class="location">
          <i class="fa-solid fa-location-dot"></i> {{location}}
        </div>
        <div class="divider-vertical"></div>

        {{!-- urgency for customers, hours for providers --}}
        {{#if urgency}}
          <div class="working-hours">
            <i class="fa-regular fa-clock"></i> {{urgency}}
          </div>
        {{else}}
          <div class="working-hours">
            <i class="fa-regular fa-clock"></i> {{hours}}
          </div>
        {{/if}}
      </div>
    </div>

    <hr class="divider">

    <div class = "title">
      <h5 class="title-text">Title:</h5>
      <p>{{title}}</p>
    </div>

    <div class="description">
      <h5 class="desc-title">Description:</h5>
      <p>{{description}}</p>
    </div>

    <div class="post-image">
      {{#if imagePost}}
        <!-- single image -->
        <img src="{{imagePost}}" alt="Post Image" class="customerpost-image" loading="lazy">
      {{/if}}

      {{#if imageGallery}}
        <!-- multiple images -->
        <div class="gallery" aria-label="Post images">
          {{#each imageGallery}}
            <img src="{{this}}" alt="Post image {{@index}}" loading="lazy">
          {{/each}}
        </div>
      {{/if}}
    </div>


    <hr class="divider">

    <p class="price-range"><strong>Range:</strong> ₱{{minPrice}} – ₱{{maxPrice}}</p>
  </div>
  {{!-- dont show button if own profile --}}
  {{#unless isOwner}}
    <button class="message-btn">
      Message / Make Offer <i class="fa-solid fa-arrow-right"></i>
    </button>
  {{/unless}}
</div>
