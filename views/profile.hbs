<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile | OnHand</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/profile.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/popups.css">
  <link rel="stylesheet" href="/css/homepage.css">
  <script src="/js/script.js"></script>
  <script src="/js/popup.js"></script>
  <script src="/js/dropdown-profile.js"></script>
  <script src="/js/profile-edit.js"></script>
  <script src="/js/report.js"></script>
  <link rel="icon" href="/images/icon.png" type="image/png">
</head>

<body>
  {{> header}}

  <main class="profile-page">
    <div class="profile-left">
      <div class="profile-header">
        <div class="profile-info-wrapper">
          <img 
            src="{{#if user.profilePicture}}{{user.profilePicture}}{{else}}/images/profile_picture.png{{/if}}" 
            alt="{{user.firstName}} {{user.lastName}}" 
            class="avatar"
          >

          <div class="profile-info">
            <h1>{{user.firstName}} {{user.lastName}}</h1>

            <div class="meta-row">@{{user.userName}}</div>

            <div class="meta-row">
              <i class="fa-solid fa-envelope"></i>
              <span class="editable" data-field="email" data-id="{{user.id}}">{{user.email}}</span>
              {{#if isOwner}}
                <button class="edit-btn" aria-label="Edit email"><i class="fa-solid fa-pen-to-square"></i></button>
              {{/if}}
            </div>

            <div class="meta-row">
              <i class="fa-solid fa-location-dot"></i>
              <span class="editable" data-field="location" data-id="{{user.id}}">
                {{#if user.address.city}}{{user.address.city}}{{else}}Location not set{{/if}}
              </span>
              {{#if isOwner}}
                <button class="edit-btn" aria-label="Edit location"><i class="fa-solid fa-pen-to-square"></i></button>
              {{/if}}
            </div>

            <div class="meta-row">
              <i class="fa-solid fa-phone"></i>
              <span class="editable" data-field="phoneNumber" data-id="{{user.id}}">
                {{#if user.phoneNumber}}{{user.phoneNumber}}{{else}}No phone set{{/if}}
              </span>
              {{#if isOwner}}
                <button class="edit-btn" title="Edit phone"><i class="fa-solid fa-pen-to-square"></i></button>
              {{/if}}
            </div>
          </div>
        </div>

        <!-- Working Hours (hidden by default, shown only in provider mode) -->
        <div class="profile-working-hours" id="profileWorkingHours" style="display: none;">
          <h3>Working Details</h3>

          <div class="working-area-row meta-row">
            <i class="fa-solid fa-location-dot"></i>
            <span class="editable" data-field="WorkingArea" data-id="{{user.id}}">
              {{#if user.WorkingArea}}{{user.WorkingArea}}{{else}}Working area not set{{/if}}
            </span>
            {{#if isOwner}}
              <button class="edit-btn" aria-label="Edit working area"><i class="fa-solid fa-pen-to-square"></i></button>
            {{/if}}
          </div>

          <div class="working-hours-row meta-row">
            <i class="fa-regular fa-clock"></i>
            <span class="editable" data-field="workingHours" data-id="{{user.id}}">
              {{#if user.workingHours}}{{user.workingHours}}{{else}}Working hours not set{{/if}}
            </span>
          </div>
        </div>

        {{#unless isOwner}}
          <button 
            class="report-btn"
            data-user-id="{{user._id}}"
          >
            <i class="fa-solid fa-flag"></i> Report User
          </button>
        {{/unless}}

      </div>
      <div class="bottom-section">
        <div class="details">
          <h3>Posts</h3>
          <div class="service-list">
            {{#each posts}}
              {{> serviceCard this}}
            {{else}}
              <p>No posts yet.</p>
            {{/each}}
          </div>
        </div>

        <div class="reviews">
          <h3>
            Reviews 
            {{#if reviews.length}}
              <span>
              <span style="color: #F5B800;">★ {{ratingAverage}}</span>
              <span style="color: #888888;"> ({{reviews.length}} reviews)</span>
            </span>
            {{/if}}
          </h3>

          <div class="review-list">
            {{#each reviews}}
              <div class="review-card">
                <div class="review-top">
                  <img src="{{reviewerAvatar}}" alt="Reviewer" class="review-avatar">
                  <div class="reviewer-details">
                    <h4 class="reviewer-name">{{reviewerName}}</h4>

                    <div class="review-stars">
                      {{stars}}
                      {{!-- Gold stars --}}
                      {{#each goldStars}}
                        <span style="color: #F5B800;">★</span>
                      {{/each}}

                      {{!-- Gray stars --}}
                      {{#each grayStars}}
                        <span style="color: #CCCCCC;">★</span>
                      {{/each}}
                    </div>
                  </div>
                </div>

                <p class="review-text">{{comment}}</p>
              </div>
            {{else}}
              <p>No reviews yet.</p>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    
    <div id="reportPopup" class="post-popup" style="display:none;">
      <div class="popup-content">
        <h3>Report User</h3>
        <textarea id="reportReason" class="post-text" placeholder="Describe the issue..." required></textarea>
        <div class="popup-actions">
          <button class="btn-cancel" id="cancelReport">Cancel</button>
          <button class="btn-post" id="submitReport">Submit</button>
      </div>
      </div>
    </div>

    <div id="reportSuccessPopup" class="post-popup" style="display:none;">
      <div class="popup-content">
        <h3>Report Submitted</h3>
        <p>Your report has been successfully sent.</p>
        <div class="popup-actions">
          <button class="btn-post" id="successOk">OK</button>
        </div>
      </div>
    </div>


    </div>
  </main>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const workingHours = document.getElementById("profileWorkingHours");
      const isProviderLS = localStorage.getItem("isProvider") === "true";
      const userIsProvider = "{{user.type}}" === "provider";

      if (userIsProvider && isProviderLS && workingHours) {
        workingHours.style.display = "block";
      } else if (workingHours) {
        workingHours.style.display = "none";
      }
    });

    </script>

</body>
</html>
