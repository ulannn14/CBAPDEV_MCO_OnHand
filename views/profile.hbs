<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Profile | OnHand</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/profile.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/popups.css">
  <link rel="stylesheet" href="/css/homepage.css">
  <script src="/js/script.js"></script>
  <script src="/js/popup.js"></script>
  <script src="/js/dropdown-profile.js"></script>
  <script src="/js/profile-edit.js"></script>
  <link rel="icon" href="/images/icon.png" type="image/png">
</head>

<body>
  {{> header}}

  <main class="profile-page">
    <div class="profile-left">
      <div class="profile-header">
        <div class="profile-info-wrapper">
          <img 
            src="{{#if user.profilePicture}}{{user.profilePicture}}{{else}}/images/profile_picture.png{{/if}}" 
            alt="{{user.firstName}} {{user.lastName}}" 
            class="avatar"
          >

          <div class="profile-info">
            <h1>{{user.firstName}} {{user.lastName}}</h1>

            <div class="meta-row">@{{user.userName}}</div>

            <div class="meta-row">
              <i class="fa-solid fa-envelope"></i>
              <span class="editable" data-field="email" data-id="{{user.id}}">{{user.email}}</span>
              <button class="edit-btn" aria-label="Edit email"><i class="fa-solid fa-pen-to-square"></i></button>
            </div>

            <div class="meta-row">
              <i class="fa-solid fa-location-dot"></i>
              <span class="editable" data-field="location" data-id="{{user.id}}">
                {{#if user.city}}{{user.city}}{{else}}Location not set{{/if}}
              </span>
              <button class="edit-btn" aria-label="Edit location"><i class="fa-solid fa-pen-to-square"></i></button>
            </div>

            <div class="meta-row">
              <i class="fa-solid fa-phone"></i>
              <span class="editable" data-field="phone" data-id="{{user.id}}">
                {{#if user.phone}}{{user.phone}}{{else}}No phone set{{/if}}
              </span>
              <button class="edit-btn" title="Edit phone"><i class="fa-solid fa-pen-to-square"></i></button>
            </div>
          </div>
        </div>

        <!-- Working Hours (hidden by default, shown only in provider mode) -->
        <div class="working-hours" id="workingHours" style="display: none;">
          <h3><i class="fa-regular fa-clock"></i> Working Hours:</h3>
          <ul>
            <li>Mon–Fri: 9 AM – 6 PM</li>
            <li>Sat: 9 AM – 12 NN</li>
          </ul>
        </div>
      </div>

      <div class="bottom-section">
        <div class="details">
          <h3>Posts</h3>
          <div class="service-list">
            {{#each user.posts}}
              {{> serviceCard this}}
            {{else}}
              <p>No posts yet.</p>
            {{/each}}
          </div>
        </div>

        <div class="reviews">
          <h3>
            Reviews 
            {{#if user.rating}}<span style="color: #F5B800;">{{user.rating}}★</span>{{/if}}
            {{#if user.reviewCount}}{{user.reviewCount}} Reviews{{/if}}
          </h3>

          <div class="review-list">
            {{#each user.reviews}}
              <div class="review-card">
                <div class="review-top">
                  <img src="{{this.avatar}}" alt="Reviewer" class="review-avatar">
                  <div class="reviewer-details">
                    <h4 class="reviewer-name">{{this.name}}</h4>
                    <div class="review-stars">
                      {{this.stars}}★ <span>{{this.rating}}</span>
                    </div>
                  </div>
                </div>
                <p class="review-text">{{this.comment}}</p>
              </div>
            {{else}}
              <p>No reviews yet.</p>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    const workingHours = document.getElementById("workingHours");
    const isProvider = localStorage.getItem("isProvider") === "true";

    // Show working hours only when provider mode is active
    if (isProvider && workingHours) {
      workingHours.style.display = "block";
    } else if (workingHours) {
      workingHours.style.display = "none";
    }
  });
  </script>
</body>
</html>
